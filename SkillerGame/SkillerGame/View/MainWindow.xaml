<Window x:Class="SkillerGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SkillerGame"
       
        mc:Ignorable="d"
        Title="Skiller" Height="850" Width="500">
    
        
        
        <Grid HorizontalAlignment="Center" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Grid.ColumnSpan="2" FontSize="50" Content="Place Holder" VerticalAlignment="Center"/>
            
            <Button Grid.Row="1" Grid.ColumnSpan="2"  FontSize="20" Content="Zaczynamy" Height="100" Click="Button_Click"/>
            
        </Grid>
    
    
    
</Window>
